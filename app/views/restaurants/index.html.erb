<h1>LISTE DE TOUS MES RESTAURANTS</h1>

<ul>
<% @restaurants.each do |resto| %>
  <li class="list-group-item"><%= resto.name %> <%= link_to "tu veux voir ?", "/restaurants/#{resto.id}" %></li>
  <% end %>
  </ul>
<div class="card" width="300px">
  <%= simple_form_for @restaurant do |f| %>
  <%= f.input :name , input_html: { class: "form-label" }%>
  <%= f.input :address , { class: "m-3"} %>
  <%= f.input :phone_number , { class: "m-3"} %>
  <%= f.select :category, collection: Restaurant::CATEGORY  %>
  <%= f.button :submit %>
<% end %>
</div>